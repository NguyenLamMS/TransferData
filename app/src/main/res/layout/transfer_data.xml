<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="bottom"
            android:layout_weight="0.5"
            android:text="Transfer Data"
            android:textSize="30dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Please don't move or use your phone, the data will be save for your new phone affter sending process"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            android:layout_weight="0.6"
            android:layout_marginLeft="10dp"
            android:src="@drawable/server"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <pl.droidsonroids.gif.GifImageView
            android:layout_weight="0.5"
            android:src="@drawable/animation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <FrameLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/list_tranfer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:visibility="gone"
            android:id="@+id/tranfer_done"
            android:text="DONE"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/custom_btn_2"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
    </FrameLayout>
</LinearLayout>