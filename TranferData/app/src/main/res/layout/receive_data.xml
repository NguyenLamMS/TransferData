<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="bottom"
            android:layout_weight="0.5"
            android:text="Receive Data"
            android:textSize="30dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Please don't move or use your phonr, the data will be save for your new phone affter sending process"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            android:layout_weight="0.5"
            android:src="@drawable/animation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <pl.droidsonroids.gif.GifImageView
            android:layout_marginRight="10dp"
            android:layout_weight="0.6"
            android:src="@drawable/client"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear_progress"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:layout_weight="0.5"
                    android:id="@+id/number_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/title_time"
                    android:gravity="center|bottom"
                    android:layout_weight="0.5"
                    android:text="Estimated time remaining"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <pl.droidsonroids.gif.GifImageView
                    android:visibility="gone"
                    android:id="@+id/restore_load"
                    android:src="@drawable/load_device"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/txt_speed"
                    android:layout_weight="0.5"
                    android:gravity="center|top"
                    android:text="5 min"
                    android:fontFamily="sans-serif-black"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:visibility="gone"
                android:id="@+id/btn_done"
                android:text="DONE"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="@drawable/custom_btn_2"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>